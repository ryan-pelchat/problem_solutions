{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++14", // Use C++14 standard
                "-stdlib=libc++", // Link against the C++ standard library
                "-g", // Include debugging symbols
                "-o",
                "buriedtreasure2", // Output file name
                "${file}" // The current file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for building C++ files"
        }
    ]
}